<%- include('./includes/head')%>
    <%- include('./includes/nav')%>

        <div class="container-err">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Contatos</h1>
                    <p class="text-center lead">Crie ou atualize seus abaixo.</p>

                    <%- include('includes/messages')%>

                        <form action="/contato/register" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken%>">

                            <div class="form-group row">
                                <label for="staticEmail" class="col-sm-2 col-form-label">Nome</label>
                                <div class="col-sm-10">
                                    <input type="text" value="<%= contato.nome %>" class="form-control" id="idNome" name="nome"
                                        placeholder="">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="" class="col-sm-2 col-form-label">Sobrenome</label>
                                <div class="col-sm-10">
                                    <input type="text" value="<%= contato.sobrenome %>" class="form-control" id="idSobrenome" name="sobrenome">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" value="<%= contato.email %>" class="form-control" id="idEmail" name="email" placeholder="email@example.com">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="" class="col-sm-2 col-form-label">Telefone</label>
                                <div class="col-sm-10">
                                    <input type="tel" value="<%= contato.telefone %>" class="form-control" id="idTelefone" name="telefone">
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary">Criar conta</button>
                        </form>
                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('./includes/footer')%>