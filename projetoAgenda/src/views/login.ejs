<%- include('./includes/head')%>
    <%- include('./includes/nav')%>

        <div class="container-err">
            <div class="row">
                <div class="col-lg-2">
                </div>
                
                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Criar conta ou Entrar</h1>
                    <p class="text-center lead">Faça o login ou crie sua conta abaixo</p>
                    
                    <%- include('includes/messages')%>
                    <div id="messagesValida"></div>
                    <div class="row">

                        <div class="col-lg">
                            <h4>Crie sua Conta</h4>
                            <p>Se você não tem conta, preencha o formulário abaixo:</p>
                            
                            <form class="form-cadastro" id="idCadastro" action="/login/register" method="POST">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken%>">

                                    <div class="form-group row">
                                        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control"  name="email" placeholder="email@example.com">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                                        <div class="col-sm-10">
                                            <input type="password" class="form-control"  name="password">
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Criar conta</button>
                                </form>
                        </div>

                        <div class="col-lg">
                            <h4>Faça seu login</h4>
                            <p>Se você já tem uma conta, faça login abaixo:</p>

                            <form class="form-login" action="/login/login" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken%>">


                                    <div class="form-group row">
                                        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control"  placeholder="email@example.com" name="email">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                                        <div class="col-sm-10">
                                            <input type="password" class="form-control"  name="password">
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Entrar</button>
                            </form>
                        </div>

                    </div>
                </div>


                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('./includes/footer')%>