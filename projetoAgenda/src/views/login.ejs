<%- include('./includes/head')%>
    <%- include('./includes/nav')%>

        <div class="container-err">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Criar conta ou Entrar</h1>
                    <p class="text-center lead">Faça o login ou crie sua conta abaixo</p>

                    <div class="row">

                        <div class="col-lg">
                            <h4>Crie sua Conta</h4>
                            <p>Se você não tem conta, preencha o formulário abaixo:</p>

                            <form action="/login/register" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken%>">

                                <div class="form-group row">
                                    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="staticEmail"  name="email" name="email" 
                                            placeholder="email@example.com">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="inputPassword" name="password">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Criar conta</button>
                            </form>
                        </div>

                        <div class="col-lg">
                            <h4>Faça seu login</h4>
                            <p>Se você já tem uma conta, faça login abaixo:</p>

                            <form action="/login/logjn" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                                <div class="form-group row">
                                    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="staticEmail"
                                            placeholder="email@example.com">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="inputPassword">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Entrar</button>
                            </form>
                        </div>

                    </div>
                </div>


                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('./includes/footer')%>